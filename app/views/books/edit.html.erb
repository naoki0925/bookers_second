<%= form_with model: @book, local: true do |f| %>

<div>
  <label for="book_title">TITLE</label>
  <%= f.text_field :title %>
</div>
<div>
  <label for="book_impressions">IMPRESSIONS</label>
  <%= f.text_area :body %>
</div>
<div>
  <%= f.submit 'Save' %>
</div>
<%= link_to "戻る", book_path(@book) %>
<% end %>